<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_item_host_keyword_rl_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_size_16dp"
        android:paddingBottom="@dimen/dimen_size_16dp"
        android:paddingStart="@dimen/dimen_size_30dp"
        android:paddingEnd="@dimen/dimen_size_30dp"
        android:background="@android:color/white"
        android:orientation="vertical">

    <TextView
            android:id="@+id/layout_item_tv_user_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_size_60dp"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/colorPrimaryDark"
            android:maxLines="2"
            android:gravity="center"
            android:background="@android:color/transparent"/>

    <TextView
            android:id="@+id/layout_item_tv_user_description"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_size_60dp"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/colorPrimaryDark"
            android:maxLines="2"
            android:gravity="center"
            android:background="@android:color/transparent"/>

    <TextView
            android:id="@+id/layout_item_tv_user_avatar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_size_60dp"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/colorPrimaryDark"
            android:maxLines="2"
            android:gravity="center"
            android:background="@android:color/transparent"/>
</LinearLayout>
